
public class LogSportLotto {

	public static long getBit(long number, int nBit) {
		long bitValue = 0L;
		// here your code goes
		// ............
		bitValue = ((number >> nBit) & 1);
		return bitValue;
	}

	public static void main(String[] args) {
		long l = 0L;

		for (int i = 0; i < 7; i++) {
			int r = (int) (1 + Math.random() * 8);
			if(getBit(l, r)==0) {
				l = l | 1<<r
			}
		}

		for (int i = 0; i < 7; i++) {
			byte r = (byte) (1 + Math.random() * 8);
//			System.out.println(r);
			boolean flag = true;
			for (int j = i; j >= 0; j--) {
				if (r == (byte) (l >> (8 * j))) {
					flag = false;
				}
			}
			if (flag) {
				System.out.println(r);
				l += r << (8 * i);
			} else {
				i--;
			}

		}
		System.out.println(l);
	}
}
