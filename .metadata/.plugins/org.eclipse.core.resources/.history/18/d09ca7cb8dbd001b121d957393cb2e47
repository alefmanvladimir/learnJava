	@Test
	public void binTest() {
		assertEquals(0, getBit(1000, 5));
		assertEquals(5, replaceNumber(10, 5)[0]); // first int
		assertEquals(10, replaceNumber(10, 5)[1]); // second int
		assertEquals(1016, setBit(1000, 5));
	}

}
